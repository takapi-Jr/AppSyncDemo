<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppSyncDemo.Views.MainPage"
             Title="{Binding Title}">

    <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto" ColumnDefinitions="*" Margin="20">
        <Label Grid.Row="0" Text="Input" />
        <Entry Grid.Row="1" Text="{Binding Name.Value}" />
        <Label Grid.Row="2" Text="Output" />
        <Label Grid.Row="3" Text="{Binding SampleModel.Value.Message}" />
        <Button Grid.Row="4" Text="GetSample" Command="{Binding GetSampleCommand}" />
    </Grid>
    
</ContentPage>